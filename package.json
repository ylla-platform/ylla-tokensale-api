{
  "name": "ylla-tokensalek-api",
  "version": "1.0.0",
  "author": "",
  "description": "Backend API for tokensale web site.",
  "main": "index.js",
  "dependencies": {
    "axios": "^0.x",
    "bcrypt": "^3.x",
    "bluebird": "^3.5.3",
    "dotenv": "^6.2.0",
    "glob": "^7.1.3",
    "hoek": "^6.1.2",
    "jsonwebtoken": "^8.4.0",
    "kcors": "^2.2.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "koa-websocket": "^5.x",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "mongodb": "^3.x",
    "pg": "^7.7.1",
    "pm2": "^3.x",
    "redis": "^2.8.0",
    "rethinkdb": "^2.3.3"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "chai-string": "^1.5.0",
    "eslint": "^5.x",
    "eslint-config-airbnb-base": "^13.x",
    "eslint-plugin-import": "^2.x",
    "http-server": "^0.11.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.x",
    "pre-commit": "^1.2.2",
    "supertest": "^3.3.0",
    "supertest-as-promised": "^4.0.2"
  },
  "scripts": {
    "test": "NODE_ENV=test mocha './test/**/*-spec.js'",
    "start": "NODE_ENV=development ./node_modules/.bin/nodemon index.js",
    "prod:start": "NODE_ENV=production ./node_modules/.bin/nodemon index.js",
    "start:cluster": "NODE_ENV=production ./node_modules/.bin/nodemon cluster.js",
    "start:production": "NODE_ENV=production ./node_modules/.bin/pm2 start index.js -i max --watch --name='ylla-tokensale-api'",
    "restart:production": "NODE_ENV=production ./node_modules/.bin/pm2 restart ylla-tokensale-api --update-env",
    "start:development": "NODE_ENV=development ./node_modules/.bin/pm2 start index.js -i max --watch --name='ylla-tokensale-api'",
    "restart:development": "NODE_ENV=development ./node_modules/.bin/pm2 restart ylla-tokensale-api --update-env",
    "deploy": "npm run build:docs && ./bin/deploy.sh",
    "lint": "./node_modules/.bin/eslint ./src/",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "build:docs": "./node_modules/.bin/apidoc -e node_modules/ -o docs/ -i .",
    "start:docs": "npm run build:docs && ./node_modules/.bin/http-server ./docs"
  },
  "license": "SEE LICENSE IN LICENSE",
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test"
  ]
}
